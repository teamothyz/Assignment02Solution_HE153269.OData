@page "/publisher/add"
@model eBookStoreApp.Pages.Publisher.AddModel
@{
    ViewData["Title"] = "Create Publisher";
}
<div class="container">
    <h1>Create Publisher</h1>

    <form method="post">
        <div class="form-group">
            <label for="inputName">Name</label>
            <input id="inputName" class="form-control" type="text" asp-for="Publisher.Name" />
        </div>

        <div class="form-group">
            <label for="inputCity">City</label>
            <input id="inputCity" class="form-control" type="text" asp-for="Publisher.City" />
        </div>

        <div class="form-group">
            <label for="inputState">State</label>
            <input id="inputState" class="form-control" type="text" asp-for="Publisher.State" />
        </div>

        <div class="form-group">
            <label for="inputCountry">Country</label>
            <input id="inputCountry" class="form-control" type="text" asp-for="Publisher.Country" />
        </div>

        <button type="submit" class="btn btn-primary mt-3">Save</button>
    </form>
</div>